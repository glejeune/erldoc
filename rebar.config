{erl_opts, [
  {parse_transform, lager_transform}
]}.
{erlydtl_opts, [
  {doc_root, "src/view"},
  {source_ext, ".html"},
  {compiler_options, []},
  {verbose, true}, return
]}.
{sub_dirs, [
  "apps/*"
]}.
% {lib_dirs, [
%   "deps/elixir/lib"
% ]}.
% {validate_app_modules, false}.
{deps, [
  {paris, ".*", {git, "https://github.com/emedia-project/paris", "master"}},
  {erlydtl, ".*", {git, "https://github.com/evanmiller/erlydtl", {tag, "0.8.0"}}},
  {erlgit, ".*", {git, "https://github.com/gleber/erlgit", "master"}},
  {epgsql, ".*", {git, "https://github.com/epgsql/epgsql", "master"}},
  {jsx, ".*", {git, "https://github.com/talentdeficit/jsx", "master"}},
  {gproc, ".*", {git, "https://github.com/uwiger/gproc", "master"}},
  {elixir, ".*", {git, "git://github.com/elixir-lang/elixir", {tag, "v0.12.5"}}},
  {ex_doc, ".*", {git, "https://github.com/elixir-lang/ex_doc"}, [{raw, true}]}
]}.
{pre_hooks, [
  {compile, "./build_ex_doc.sh $REBAR_DEPS_DIR compile"},
  {clean, "./build_ex_doc.sh $REBAR_DEPS_DIR clean"}
]}.

